{
  "name": "Email Writer Assistant",
  "description": "AI-Powred email reply generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*","*://mail.gmail.com/*"],
  "action": {
    "default_title": "Email writer Assistant"
  },
    "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "*://mail.google.com/*"],
        "css": ["content.css"],
        "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icon/*" ],
      "matches": [ "*://mail.google.com/*"]
    }
  ]
}